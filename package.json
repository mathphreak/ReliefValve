{
  "name": "relief-valve",
  "productName": "Relief Valve",
  "version": "1.0.2",
  "description": "Juggle installed Steam games between locations.",
  "main": "out/main.js",
  "dependencies": {
    "compare-ignoring-articles": "~1.3.0",
    "del": "~2.2.0",
    "electron-contextmenu-middleware": "~1.0.1",
    "electron-input-menu": "~2.0.3",
    "electron-json-storage": "~2.0.0",
    "filesize": "~3.3.0",
    "fs.extra": "~1.3.2",
    "glob": "~7.0.0",
    "iconv-lite": "~0.4.11",
    "lodash": "~4.14.2",
    "ps-list": "~3.1.0",
    "request": "~2.74.0",
    "rx": "~4.1.0",
    "semver": "~5.3.0",
    "steam-userinfo": "~1.1.5",
    "steamid-interop": "~1.0.3",
    "tempfile": "^1.1.1",
    "vdf": "~0.0.2",
    "walk": "~2.3.9"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.11.4",
    "babel-plugin-istanbul": "^1.0.3",
    "babel-preset-electron": "^0.37.8",
    "codecov.io": "~0.1.6",
    "cross-env": "^2.0.0",
    "electron": "1.3.2",
    "electron-prebuilt": "1.3.2",
    "lorem-ipsum": "~1.0.3",
    "npm": "~3.10.6",
    "nyc": "^7.1.0",
    "xo": "^0.16.0"
  },
  "scripts": {
    "test": "npm run lint && npm run test:run && npm run test:coverage",
    "test:run": "cross-env NODE_ENV=test nyc ava",
    "test:coverage": "cross-env NODE_ENV=test nyc report --reporter=lcov --reporter=text-summary",
    "start": "gulp compile && electron .",
    "watch": "gulp compile watch",
    "exec": "electron .",
    "build": "babel src -d out",
    "build-all": "mocha && gulp build:all",
    "gulp": "gulp",
    "lint": "npm run lint:js",
    "lint:js": "xo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mathphreak/ReliefValve.git"
  },
  "author": "Matt Horn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mathphreak/ReliefValve/issues"
  },
  "homepage": "https://code.mathphreak.me/ReliefValve",
  "xo": {
    "space": true,
    "esnext": true,
    "ignores": [
      "src/vendor/**",
      "out/**"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "include": [
      "src/util/*.js",
      "src/steps/*.js"
    ],
    "all": true,
    "sourceMap": false,
    "instrument": false
  }
}
